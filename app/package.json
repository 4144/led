{
	"name": "led",
	"version": "0.0.2-alpha",
	"main": "bin/main.js",
	"productName": "LEd",
	"author": "Sebastien Benard",
	"description": "Modern 2D level editor",
	"scripts": {
		"start": "electron .",
		"compile": "cd.. && haxe app.hxml",
		"pack": "npm run pack-win && npm run pack-mac",
		"pack-win": "electron-builder build --win --publish never",
		"pack-mac": "electron-builder build --mac --publish never",
		"publish-github": "electron-builder build --publish always",
		"publish-itchio": "butler push \"redist/LEd %npm_package_version% installer.exe\" deepnight/led:win64 --userversion-file ../lastBuildVersion.txt",
		"publish": "npm run compile && npm run publish-github && npm run publish-itchio"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/deepnight/led.git"
	},
	"dependencies": {
		"electron-updater": "^4.3.4"
	},
	"devDependencies": {
		"electron": "^10.0.0",
		"electron-builder": "^22.8.0"
	},
	"build": {
		"appId": "com.deepnight.led",
		"artifactName": "${productName} ${version} installer.${ext}",
		"directories": {
			"output": "redist"
		},
		"files": [
			"bin",
			"package.json"
		],
		"nsis": {
			"oneClick": true,
			"shortcutName": "LEd - Modern 2D level editor"
		},
		"win": {
			"target": "nsis",
			"publish": [
				"github"
			]
		},
		"mac": {
		}
	}
}
