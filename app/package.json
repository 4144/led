{
	"name": "led",
	"version": "0.0.4",
	"main": "bin/main.js",
	"productName": "LEd",
	"author": "Sebastien Benard",
	"description": "Modern 2D level editor",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder build --win --publish never",
		"build-publish": "electron-builder build --win --publish always",
		"pack": "electron-packager . LEd --platform=win32 --arch=ia32,x64  --overwrite --out=../redist"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/deepnight/led.git"
	},
	"dependencies": {},
	"devDependencies": {
		"electron": "^9.2.1",
		"electron-builder": "^22.8.0",
		"electron-packager": "^15.1.0",
		"electron-updater": "^4.3.4"
	},
	"build": {
		"appId": "com.deepnight.led",
		"directories": {
			"output": "redist"
		},
		"files": [
			"bin"
		],
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true
		},
		"win": {
			"target": "nsis",
			"publish": [
				"github"
			]
		}
	}
}
