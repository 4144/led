{
	"name": "led",
	"version": "0.0.3",
	"main": "bin/main.js",
	"productName": "LEd",
	"author": "Sebastien Benard",
	"description": "Modern 2D level editor",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder build --publish never",
		"build-test": "electron-builder build --dir --publish never",
		"publish": "electron-builder build --publish always"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/deepnight/led.git"
	},
	"dependencies": {
		"electron-updater": "^4.3.4"
	},
	"devDependencies": {
		"electron": "^10.0.0",
		"electron-builder": "^22.8.0"
	},
	"build": {
		"appId": "com.deepnight.led",
		"directories": {
			"output": "redist"
		},
		"files": [
			"bin",
			"package.json"
		],
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true
		},
		"win": {
			"target": "nsis",
			"publish": [
				"github"
			]
		}
	}
}
